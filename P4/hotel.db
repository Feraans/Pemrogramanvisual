using (var conn = new SQLiteConnection("Data Source=hotel.db;Version=3;"))
{
    conn.Open();
    string sql = @"CREATE TABLE IF NOT EXISTS tamu (
        id INTEGER PRIMARY KEY AUTOINCREMENT,
        nama TEXT,
        alamat TEXT,
        no_telepon TEXT,
        checkin TEXT,
        checkout TEXT,
        metode TEXT,
        tarif_per_malam INTEGER,
        jumlah_malam INTEGER,
        total_bayar INTEGER
    );";
    using (var cmd = new SQLiteCommand(sql, conn))
    {
        cmd.ExecuteNonQuery();
    }
}
